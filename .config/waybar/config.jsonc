{
  "layer": "bottom",
  "position": "top",
  "height": 35,
  "spacing": 2,
  "exclusive": true,
  "gtk-layer-shell": true,
  "passthrough": false,
  "fixed-center": true,
  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["clock", "clock#simpleclock"],
  "modules-right": [
    "custom/weather",
    //"custom/ethernet",
    "custom/fullcpu",
    //"memory",
    "pulseaudio",
  //  "clock",
   // "clock#simpleclock",
    "tray",
    "power-profiles-daemon",
    "custom/power"
  ],
  "custom/fullcpu": {
    "format": "{}",
    "interval": 2,
    "exec": "~/.local/bin/waybar/full_cpu.sh",
    "tooltip": false
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ğŸŒ“",
      "performance": "âš¡",
      "balanced": "ğŸŒ“",
      "power-saver": "ğŸŒ¿"
    }
  },	
  "custom/weather": {
    "exec": "bash ~/.local/bin/waybar/waybar-weather.sh",
    "on-click": "mousam",
    "interval": 600,
    "tooltip": false,
    "signal": 3,
    "format": "{}"
  },
  "custom/ethernet": {
    "format": "{}",
    "exec": "~/.local/bin/waybar/ethernet.sh",
    "tooltip": false
    //"on-click": "zsh -c nmtui",
  },
  "mpris": {
//    "player": "spotify",
    "dynamic-order": ["artist", "title"],
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} <i>{dynamic}</i>",
    "status-icons": {
      "paused": "ïŒ"
    },
    "player-icons": {
      "default": "ï‹"
    }
  },
  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "urgent": "ïª ",
      "active": "ï„‘ ", // focused workspace on current monitor 
      "visible": "ï„‘ ", // focused workspace on other monitors
      "default": "ï„Œ ",
      "empty": "ï„Œ " // persistent (created by this plugin)
    },
    "all-outputs": false,
    "disable-scroll": false,
    "active-only": false
  },
  "hyprland/window": {
    "format": "{title}"
  },
  "tray": {
    "show-passive-items": true,
    "spacing": 10
  },
  "clock#simpleclock": {
    "tooltip": false,
    "format": "â€‰{:%H:%M}"
  },
  "clock": {
    "format": "â€‰{:L%a %d %b}",
    "calendar": {
      "format": {
        "days": "<span weight='normal'>{}</span>",
        "months": "<span color='#cdd6f4'><b>{}</b></span>",
        "today": "<span color='#f38ba8' weight='700'><u>{}</u></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "weeks": "<span color='#a6e3a1'><b>W{}</b></span>"
      },
      "mode": "month",
      "mode-mon-col": 1,
      "on-scroll": 1
    },
    "tooltip-format": "<span color='#cdd6f4' font='Lexend 14'><tt><small>{calendar}</small></tt></span>"
  },
  "cpu": {
    "format": "ï‹› {usage}%",
    "tooltip": true,
    "interval": 1
  },
  "memory": {
    "format": "ğŸ’¾â€‰{used:0.1f}Gi"
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "ğŸ”‡",
    "format-icons": {
      "headphone": "ğŸ§",
      "default": ["ğŸ”ˆ", "ğŸ”‰", "ğŸ”Š"]
    },
    "on-click": "pavucontrol"
  },
  "custom/sep": {
    "format": "|",
    "tooltip": false
  },
  "custom/power": {
    "tooltip": false,
    "on-click": "wlogout -b 4",
    "format": "â»â€¯"
  }
}

